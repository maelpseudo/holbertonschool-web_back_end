// Connect to the MongoDB server
db = connect('localhost:27017/admin');

// List all databases
var databases = db.adminCommand('listDatabases');

// Print each database's name and its size in GB
databases.databases.forEach(function(database) {
  print(database.name + ' ' + (database.sizeOnDisk / (1024 * 1024 * 1024)).toFixed(3) + 'GB');
});

// Close the connection
db.close();
